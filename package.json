{
  "name": "audio-recorder",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win --x64"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "audify": "^1.3.2",
    "electron-store": "^11.0.2",
    "ffmpeg-static": "^5.2.0",
    "wav": "^1.0.2"
  },
  "build": {
    "appId": "com.example.callrecorder",
    "productName": "Call Audio Recorder",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "recorder.js",
      "index.html",
      "assets/**/*"
    ],
    "asar": true,
    "win": {
      "target": "dir",
      "icon": "assets/icon.ico"
    }
  }
